{
  "compilerOptions": {
    "module": "NodeNext",
    "lib": ["ES2020", "dom"],
    "esModuleInterop": true,
    "target": "ES2023",
    "moduleResolution": "nodeNext",
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": false,
    "typeRoots": ["node_modules/@types"],
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "include": ["src/**/*", "generated/**/*"],
  "exclude": ["node_modules", "dist"]
}
